 <h1>Grams!</h1>

<% @grams.each do |gram| %>
<div>
  <%= gram.message %>
  <%= image_tag gram.picture.to_s, class: 'img-fluid' %>
</div>
<% end %>


<h2>Add a comment</h2>
<%= simple_form_for @comment, url: gram_comments_path(@gram) do |f| %>
  <%= f.input :message %>
  <%= f.submit 'Add Comment' %>
<% end %>